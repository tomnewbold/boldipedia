<div class='pull-left'>
<h1>Public Wikis</h1>
<%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
<% if policy(:wiki).show? %>
<%= link_to "Fancy an upgrade?", new_charge_path, class: 'btn btn-primary' %>
<% end %>
<% if policy(:wiki).downgrade? %>
<%= link_to "Back to Standard?", charges_downgrade_path, class: 'btn btn-primary' %>
<% end %>
<% @wikis.each do |wiki| %>
<% if !wiki.private? %>
  <p><%= link_to wiki.title, wiki_path(wiki.id) %></p>
<% end %>
<% end %>
</div>

