<html>
 <head>
   <title>Boldipedia</title>
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <%= stylesheet_link_tag    "application", media: "all" %>
   <%= javascript_include_tag "application" %>
   <%= csrf_meta_tags %>
 </head>
 <body>
  <div class="container">
   <ul class="nav nav-pills">
        <li><%= link_to "Home", root_path, :class => "btn btn-default navbar-btn" %></li>
        <li><%= link_to "About", about_path, :class => "btn btn-default navbar-btn" %></li>
        <li><%= link_to "Wikis", wikis_path, :class => "btn btn-default navbar-btn"%></li>
        <% if user_signed_in? %>
   
   <li><%= link_to 'Edit profile', edit_user_registration_path, :class => "btn btn-info navbar-btn" %></li>
    <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => "btn btn-danger navbar-btn" %></li>
    <strong class="navbar-text"><%= current_user.email %></strong>  
 <% else %>
 
   <li><%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-primary navbar-btn "  %> </li>
   <li><%= link_to "Sign In", new_user_session_path, :class => "btn btn-success navbar-btn"  %></li>
 <% end %>
   </ul>
   <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div class="alert alert-danger">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>

   <%= yield %>
   </div>

 </body>
 </html>